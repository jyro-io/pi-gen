[Unit]
Description=Open Source Security System - Motion service
Documentation=https://github.com/jyro-io/osss
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
ExecStart=/usr/bin/libcamerify motion
ExecReload=/bin/kill -s HUP $MAINPID
TimeoutStartSec=0
RestartSec=2
Restart=always

[Install]
WantedBy=multi-user.target